{
  "extends": "standard",
  "parser": "babel-eslint",
  "env": {
    // Note: mocha env is defined inside test/.eslintrc.json
    "node": true
  },
  "rules": {
    "space-before-function-paren": 0,
    "space-before-blocks": 0,
    "eqeqeq": 0,
    "yoda": 0,
    "semi": [2, "always"],
    "no-extra-semi": 2,
    "semi-spacing": [2, { "before": false, "after": true }]
  }
}
